<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/sedentaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/orange"
        android:text="Sédentaire"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="326dp" />

    <CheckBox
        android:id="@+id/sportifoccas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/orange"
        android:text="Sportif occasionnel"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="326dp" />

    <CheckBox
        android:id="@+id/sportifregulier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sportif régulier"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="375dp"
        android:buttonTint="@color/orange"/>

    <CheckBox
        android:id="@+id/sportifacharne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sportif acharné"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="375dp"
        android:buttonTint="@color/orange"/>

    <EditText
        android:id="@+id/activitephysique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Votre activité physique :"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="281dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange"

        android:text="Valider"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="478dp" />
</androidx.constraintlayout.widget.ConstraintLayout>